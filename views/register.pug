extends layout 

block content
  div(class='flex flex-col items-center mt-4')
    div 
      i(class='fas fa-user fa-2x mb-2')
      span(class='text-2xl') Register
    form(action='register' method='POST')
      div(class='flex flex-col') 
        label(for="name") Name
        input#name(type="text" name='name' placeholder='Enter Name' class='' value=(undefined===name ? '' : name)) 
      div(class='flex flex-col')
        label(for="email") Email
        input#email(type="email" name='email' placeholder='Enter Email' class='' value=(undefined===email ? '' : email)) 
      div(class='flex flex-col') 
        label(for="password") Password
        input#password(type="password" name='password' placeholder='Enter Password' class='') 
      div(class='flex flex-col') 
        label(for="password2") Confirm Password
        input#password2(type="password" name='password2' placeholder='Confirm Password' class='') 
      button(type='submit' class='w-full my-2 border bg-green-500') Submit
    p(class='') Have An Account? 
      a(href='login' class='text-blue-500') Login
  if errors
    ul
      for error in errors
        li!= error.msg
      